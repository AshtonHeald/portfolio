---
import Layout from "../layouts/Layout.astro";
import Title from "../components/Title.astro";
import Heading from "../components/Heading.astro";
import Form from "../components/Contact/Form";
import IconBtn from "../components/Contact/IconBtn.astro";

import SocialMenu from "../components/Contact/SocialMenu.astro";

---

<Layout title="Ashton Heald - Portfolio">
	<Heading heading="Contact" subheading="Feel free to contact me anytime" />
	<Title title="Send me a message!" />
	<div class="flex flex-col lg:flex-row gap-4 mt-2.5">
		<div class="flex-1">
			<div class="card bg-base-100 border border-base-300 w-full mb-3">
				<div class="card-body">
					<Form client:load />
				</div>
			</div>
			
		</div>
		<div class="space-y-2">

			<div class="w-full h-full lg:w-[350px] lg:h-[350px]">
				<iframe
			class="w-full h-full rounded-xl border border-base-300"
			src="https://www.openstreetmap.org/export/embed.html?bbox=-97.66347885131837%2C35.42025165506909%2C-97.37680435180665%2C35.54773099635523&amp;layer=mapnik"
			></iframe>
		</div>
			<div>
				<Title title="Find me elsewhere!" />
				<SocialMenu />
			</div>
	</div>
	</div>
</Layout>

<style is:global>
	.input {
		height: auto;
	}
	.input, .textarea {
		padding: .5rem;
	}

</style>