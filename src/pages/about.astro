---
import Layout from "../layouts/Layout.astro";

import Info from "../components/About/Info.astro";
import Link from "../components/Link.astro";
import Heading from "../components/Heading.astro";
import Title from "../components/Title.astro";
import Model from "../components/About/Model.jsx";
---

<Layout title="Ashton Heald - Portfolio">
  <div class="flex gap-3">
    <article class="w-full select-none md:flex-[0_0_60%]">
      <Heading heading="About" subheading="Get to know me" />
      <Title title="Who am I?" />
      <p class="mb-5 border-b border-base-300 pb-5">
        I'm Ash, a software developer specializing in web technologies and
        front-end development. Driven by a passion for creating and
        problem-solving, I build fully responsive, pixel-perfect, and
        user-friendly front-ends for web applications. I've been working with
        web-based technologies since 2018.
      </p>
      <div class="grid gap-3">
        <Info label="Location:">
          <span class="">Oklahoma City, OK</span>
        </Info>
        <Info label="Blog:">
          <Link
            ariaLabel="Navigate to blog"
            text="blog.ashthe.dev"
            href="https://blog.ashthe.dev"
          />
        </Info>
        <Info label="Interests:">
          <span class="badge badge-ghost">Technology</span>
          <span class="badge badge-ghost">Philosophy</span>
          <span class="badge badge-ghost">Cognitive Science</span>
          <span class="badge badge-ghost">The Arts</span>
        </Info>
        <Info label="Hobbies:">
          <span class="badge badge-ghost">Reading</span>
          <span class="badge badge-ghost">Writing</span>
          <span class="badge badge-ghost">Learning</span>
          <span class="badge badge-ghost">Building</span>
          <span class="badge badge-ghost">Exploring</span>
        </Info>
        <div class="flex gap-3 pt-1.5">
          <a
            href="/ashtonheald-resume.pdf"
            aria-label="View resume in PDF format"
            class="btn btn-primary gap-0.5"
          >
            Resume
            <svg
              xmlns="http://www.w3.org/2000/svg"
              fill="none"
              viewBox="0 0 24 24"
              stroke-width="1.5"
              stroke="currentColor"
              class="h-5 w-5"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="M19.5 14.25v-2.625a3.375 3.375 0 0 0-3.375-3.375h-1.5A1.125 1.125 0 0 1 13.5 7.125v-1.5a3.375 3.375 0 0 0-3.375-3.375H8.25m0 12.75h7.5m-7.5 3H12M10.5 2.25H5.625c-.621 0-1.125.504-1.125 1.125v17.25c0 .621.504 1.125 1.125 1.125h12.75c.621 0 1.125-.504 1.125-1.125V11.25a9 9 0 0 0-9-9Z"
              ></path>
            </svg>
          </a>
          <a
            href="/projects"
            aria-label="Go to projects"
            class="btn btn-neutral gap-0.5"
          >
            My Work
            <svg
              xmlns="http://www.w3.org/2000/svg"
              fill="none"
              viewBox="0 0 24 24"
              stroke-width="1.5"
              stroke="currentColor"
              class="h-5 w-5"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="m12.75 15 3-3m0 0-3-3m3 3h-7.5M21 12a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z"
              ></path>
            </svg>
          </a>
        </div>
      </div>
    </article>
    <Model client:only="react" />
  </div>
</Layout>
