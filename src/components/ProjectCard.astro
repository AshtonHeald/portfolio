---
const { project } = Astro.props;
---

<a
  href={`/projects/${project.slug}`}
  class="card image-full w-full rounded-md border border-base-300 before:hidden before:!rounded-md before:!opacity-90 hover:before:block"
>
  <figure>
    <img
      class="aspect-video"
      src={`${project.image?.filename}`}
      alt={project.image?.alt}
    />
  </figure>
  <div
    class="card-body w-full items-center justify-center gap-3 p-2 opacity-0 hover:opacity-100"
  >
    <h2 class="text-2xl font-semibold">
      {project.title}
    </h2>
    <div class="flex max-w-72 flex-wrap justify-center gap-2">
      {
        project.tech?.map((project) => {
          return (
            <div class="badge badge-outline flex gap-1">
              <img
                src={project.icon?.filename}
                alt={project.icon?.alt}
                class="max-h-3 w-3"
              />
              <span class="w-full">{project.icon?.title}</span>
            </div>
          );
        })
      }
    </div>
    <div class="card-actions">
      <div class="text-primary">View Details</div>
    </div>
  </div>
</a>
