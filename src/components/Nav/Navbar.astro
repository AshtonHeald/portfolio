---
import Theme from "../Theme.astro";
---

<div
  class="navbar fixed z-50 h-[60px] min-h-0 border border-b border-l-0 border-r-0 border-t-0 border-base-300 bg-base-100 md:p-4 xl:hidden"
>
  <div class="flex-1">
    <ul class="menu menu-horizontal gap-2 px-1 md:gap-1">
      <li>
        <a
          href="/"
          class="btn btn-square flex h-10 min-h-10 w-10 gap-1 border-none bg-inherit shadow-none md:w-auto md:px-3"
          aria-label="Home"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            viewBox="0 0 24 24"
            stroke-width="1.5"
            stroke="currentColor"
            class="h-6 w-6"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              d="m2.25 12 8.954-8.955c.44-.439 1.152-.439 1.591 0L21.75 12M4.5 9.75v10.125c0 .621.504 1.125 1.125 1.125H9.75v-4.875c0-.621.504-1.125 1.125-1.125h2.25c.621 0 1.125.504 1.125 1.125V21h4.125c.621 0 1.125-.504 1.125-1.125V9.75M8.25 21h8.25"
            ></path>
          </svg>
          <span class="hidden md:block">Home</span>
        </a>
      </li>
      <li>
        <a
          href="/about"
          class="btn btn-square flex h-10 min-h-10 w-10 gap-1 border-none bg-inherit shadow-none md:w-auto md:px-3"
          aria-label="About"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            viewBox="0 0 24 24"
            stroke-width="1.5"
            stroke="currentColor"
            class="h-6 w-6"
          >
            <path
              stroke-linecap="round"
